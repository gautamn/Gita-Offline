    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/shlokaNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chapter 1 Shloka 1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/shlokaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shlokaNumber"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/shlokaTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shlokaText"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="5dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bt_share"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shlokaTrans"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:height="20dp"
            android:drawableLeft="@drawable/ic_share"
            android:paddingHorizontal="5dp" />

        <Button
            android:id="@+id/bt_bookmark"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shlokaTrans"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/share"
            android:height="20dp"
            android:drawableLeft="@drawable/ic_bookmarks"
            android:paddingHorizontal="5dp"
            android:clickable="true"
            />


    </RelativeLayout>


</RelativeLayout>

