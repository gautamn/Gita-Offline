<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gita.holybooks.bhagwatgita.activity.ChapterSlidePagerActivity">

    <!--<include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:id="@+id/moolShloka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/shlokaNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:text="Chapter 1 Shloka 2"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shlokaNumber"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="Shloka"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shlokaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/holo_green_light"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="53 down vote favorite 8 I am using RecyclerView with GridLayoutManager and I have each item as CardView."
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/bt_share"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/shlokaText"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_share" />

                <ImageView
                    android:id="@+id/bt_copy"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shlokaText"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_share"
                    android:src="@drawable/ic_action_copy" />


                <ImageView
                    android:id="@+id/bt_image"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shlokaText"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_copy"
                    android:src="@drawable/ic_action_image" />

                <ImageView
                    android:id="@+id/bt_note"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shlokaText"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_image"
                    android:src="@drawable/ic_action_note" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moolShloka">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/title_trans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="Translation"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shlokaTrans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_trans"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/holo_green_light"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="53 down vote favorite 8 I am using RecyclerView with GridLayoutManager and I have each item as CardView."
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/bt_share_trans"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/shlokaTrans"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_share" />

                <ImageView
                    android:id="@+id/bt_copy_trans"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shlokaTrans"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_share_trans"
                    android:src="@drawable/ic_action_copy" />


                <ImageView
                    android:id="@+id/bt_image_trans"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shlokaTrans"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_copy_trans"
                    android:src="@drawable/ic_action_image" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>

