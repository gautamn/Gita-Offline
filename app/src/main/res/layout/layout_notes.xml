<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:lines="20"
        android:maxLines="3"
        android:minLines="6"
        android:scrollbars="vertical"
        android:text="Chapter 1 Shloka 1"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:textCursorDrawable="@drawable/custom_cursor_drawable"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/background_dark"/>

    <ImageView
        android:id="@+id/bt_save"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editNote"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_action_save" />

    <ImageView
        android:id="@+id/bt_copy"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNote"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/bt_save"
        android:src="@drawable/ic_action_copy" />


    <ImageView
        android:id="@+id/bt_share"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNote"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/bt_copy"
        android:src="@drawable/ic_share" />

</RelativeLayout>
