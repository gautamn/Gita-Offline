    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/progress_chart"
        android:layout_width="match_parent"
